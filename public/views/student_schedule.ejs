                  </svg>
                  </svg>Delete</button>
                
                  <div class="modal fade" id="edit<%=schedule.schedule_id%>">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Edit Schedule</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                          
                          <form method ="POST" action="/edit_schedule">
                              <div class="mb-3">
                                <label for="firstname" class="col-form-label"> Class</label>
                                <input type="text" class="form-control" id="" name="class" value=<%= schedule.class_id %>>
                                <input type="hidden" class="form-control" id="" name="hidden" value="<%=schedule.schedule_id%>">
                              </div>
            
                              <div class="mb-3">
                                <label for="lastname" class="col-form-label"> Section</label>
                                <input type="text" class="form-control" id="" name="section" value=<%= schedule.section %>>
            
                              </div>
            
                              <div class="mb-3">
                                <label for="grades" class="col-form-label"> Schedule Name</label>
                                <input type="text" class="form-control" id="" name="schedule_name" value=<%=schedule.schedule_name%>>
            
                              </div>

                              <div class="mb-3">
                                <label for="grades" class="col-form-label"> Schedule</label>
                                <input type="text" class="form-control" id="" name="schedule_date" value="<%=schedule.schedule_date%>">
            
                              </div>

                              <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                
                                <input type="submit" name ="grades_edit" class="btn btn-secondary" value="Ok"> 
                              </div>
                            </form>
                        </div>
                        
                      </div>
                    </div>
                  </div>
                    </div>
                    
                </div>



                <div class="modal fade" id="delete<%=schedule.schedule_id%>">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Schedule</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <div class="modal-body">
                        
                        <form method ="POST" action="/delete_schedule">
                            <div class="mb-3">
                              <input type="hidden" class="form-control" id="" name="hidden" value="<%=schedule.schedule_id%>">
                              <label for="firstname" class="col-form-label"> Are you sure you want to delete <%= schedule.schedule_name%></label>
                              
                            </div>
          
                          
                            <div class="modal-footer">
                              <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                              
                              <input type="submit" name ="grades_edit" class="btn btn-secondary" value="Ok"> 
                            </div>
                          </form>
                      </div>
                      
                    </div>
                  </div>
                </div>
                  </div>
                  
              </div>
                
                </td>
                
                
               
              </tr>

             <% }) %>
            </tbody>
          </table>
        </div>
    </section>


