                </svg> Add </button>

                <div class="modal fade" id="add_schedule">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Schedule</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <div class="modal-body">
                        
                        <form method ="POST" action="/add_schedule">
                            <div class="mb-3">
                              <label for="firstname" class="col-form-label"> Class</label>
                              <input type="text" class="form-control" id="" name="class">
                              
                            </div>
          
                            <div class="mb-3">
                              <label for="lastname" class="col-form-label"> Section</label>
                              <input type="text" class="form-control" id="" name="section">
          
                            </div>
          
                            <div class="mb-3">
                              <label for="grades" class="col-form-label"> Activity</label>
                              <input type="text" class="form-control" id="" name="activity">
          
                            </div>

                            <div class="mb-3">
                              <label for="grades" class="col-form-label"> Schedule</label>
                              <input type="date" class="form-control" id="" name="schedule">
                              
                            </div>

                          
                            <div class="modal-footer">
                              <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                              
                              <input type="submit" name ="grades_edit" class="btn btn-secondary" value="Ok"> 
                            </div>
                          </form>
                      </div>
                      
                    </div>
                  </div>
                </div>
                  </div>
                  
              </div>
                
             
            </div>
            
        </div>

    
        <div id="grades_table" class="container">  
        <table class="table table-striped" id="table">
            <thead>
              <tr>
                <th scope="col">Class</th>
                <th scope="col">Section</th>
                <th scope="col">Activity</th>
                <th scope="col">Schedule</th>
                
              </tr>
            </thead>
            <tbody>
             
              <% schedules.forEach((schedule)=> {%>
              <tr>
                <td><%= schedule.class_id %></td>
                <td><%= schedule.section %></td>
                <td><%= schedule.schedule_name %></td>
                <td><%= schedule.schedule_date %></td>
