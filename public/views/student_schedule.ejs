    <section id="main">

        <div id="grades" class="d-flex align-items-center justify-content-around"> 
        
            <div>  
            <h1 class="p-3">Schedule</h1>
            </div>
    
            <div id="grades_function" >   
                
                
               
                  <label for=""> Filter</label>
            <select id="filter_grades"  onchange="location='/schedule/section/' + this.options[this.selectedIndex].value;">
               
                <option hidden>Choose Section</option>
                <option value="3ISA">3ISA  </option> 
                <option value="3ISB">3ISB</option>
                <option value="3ISC">3ISC</option>
                <option value="4ISA">4ISA</option>
              </select>
            

           
              <select  name="filter_grades" id="filter_grades" onchange="location='/schedule/class/' + this.options[this.selectedIndex].value;">
               
                <option hidden>Choose Class</option>
                <option value="MATH101">MATH101</option>
                <option value="ENGLISH101">ENGLISH101</option>
                <option value="STATS101">STATS101</option>
                <option value="SCIENCE101">SCIENCE101</option>
              </select>
            
            </div>
            <div>  
                <button id="add_schedule_button" data-bs-toggle="modal" data-bs-target = "#add_schedule"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-plus" viewBox="0 0 16 16">
                  <path d="M8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z"/>
