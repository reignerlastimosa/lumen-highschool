    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
  </head>
    <title>Schedule</title>
</head>
<body>
    
  <%- include('./main_nav.ejs') %>   


    <section id="main">

        <div id="grades" class="d-flex align-items-center justify-content-around"> 
        
            <div>  
            <h1 class="p-3">Schedule</h1>
            </div>
    
            <div id="grades_function">   
                <label for=""> Filter</label>
            <select  name="filter_grades" id="filter_grades">
               
                <option value="class1">3-ISA</option>
                <option value="class2">3-ISB</option>
                <option value="class3">3-ISC</option>
                <option value="class4">4-ISA</option>
              </select>

              <select  name="filter_grades" id="filter_grades">
               
                <option value="class1">Class 1</option>
                <option value="class2">Class 2</option>
                <option value="class3">Class 3</option>
                <option value="class4">Class 4</option>
              </select>
            </div>
            <div>  
                <button id="add_grades" data-bs-toggle="modal" data-bs-target="#add_schedule"> Add</button>
              <button id="edit_grades" data-bs-toggle="modal" data-bs-target="#edit_schedule"> Edit</button>
            </div>
            
        </div>

        <div class="modal fade" id="add_schedule">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Add Schedule</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                
                  <form method ="POST" action="">
                      <div class="mb-3">
                        <label for="subjectname" class="col-form-label"> Subject Name</label>
                        <input type="text" class="form-control" id="" name="subjectname">
                        
                      </div>
    
                      <div class="mb-3">
                        <label for="class" class="col-form-label"> Class</label>
                        <input type="text" class="form-control" id="" name="class">
    
                      </div>
    
                      <div class="mb-3">
                        <label for="date" class="col-form-label"> Date</label>
                        <input type="text" class="form-control" id="" name="date">
    
                      </div>

                      <div class="mb-3">
                        <label for="time" class="col-form-label"> Time</label>
                        <input type="text" class="form-control" id="" name="time">
    
                      </div>

                      <div class="mb-3">
                        <label for="a.y" class="col-form-label"> A.Y</label>
                        <input type="text" class="form-control" id="" name="academicyear">
    
                      </div>
    
            
                      <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                        
                        <input type="submit" name ="grades_edit" class="btn btn-secondary" value="Add"> 
                      </div>
                    </form>
                </div>
                
              </div>
            </div>
          </div>
            </div>



            <div class="modal fade" id="edit_schedule">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Edit Schedule</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                    
                      <form method ="POST" action="">
                          <div class="mb-3">
                            <label for="subjectname" class="col-form-label"> Subject Name</label>
                            <input type="text" class="form-control" id="" name="subjectname">
                            
                          </div>
        
                          <div class="mb-3">
                            <label for="class" class="col-form-label"> Class</label>
                            <input type="text" class="form-control" id="" name="class">
        
                          </div>
        
                          <div class="mb-3">
                            <label for="date" class="col-form-label"> Date</label>
                            <input type="text" class="form-control" id="" name="date">
        
                          </div>
    
                          <div class="mb-3">
                            <label for="time" class="col-form-label"> Time</label>
                            <input type="text" class="form-control" id="" name="time">
        
                          </div>
    
                          <div class="mb-3">
                            <label for="a.y" class="col-form-label"> A.Y</label>
                            <input type="text" class="form-control" id="" name="academicyear">
        
                          </div>
        
                
                          <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                            
                            <input type="submit" name ="grades_edit" class="btn btn-secondary" value="Edit"> 
                          </div>
                        </form>
                    </div>
                    
                  </div>
                </div>
              </div>
                </div>

        <div id="grades_table" class="container">  
        <table class="table table-striped" id="table">
            <thead>
              <tr>
                <th scope="col">Subject</th>
                <th scope="col">Class</th>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col">Year-Sec</th>
                <th scope="col">A.Y</th>
              </tr>
            </thead>
            <tbody>
             <tr>
                <td>Juan</td>
